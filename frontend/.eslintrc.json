{
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "plugins": [
    "jest",
    "only-warn",
    "react"
  ],
  "rules": {
    "no-labels": [ "error", { "allowSwitch": true } ],
    "react/jsx-uses-vars": "warn"
  },
  "env": {
    "jest/globals": true,
    "node": true,
    "es6": true
  }
}